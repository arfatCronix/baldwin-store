              {
                "type": "textarea",
                "label": "SVG Path Data",
                "id": "svgPathData",
                "default": "",
                "typeMeta": {
                  "placeholder": "<svg>...</svg>"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  {
    "type": "tab",
    "label": "Display Settings",
    "sections": [
      {
        "label": "Layout",
        "settings": [
          {
            "type": "select",
            "label": "Reviews per row",
            "id": "reviewsPerRow",
            "default": "3",
            "typeMeta": {
              "selectOptions": [
                { "label": "2", "value": "2" },
                { "label": "3", "value": "3" },
                { "label": "4", "value": "4" }
              ]
            }
          }
        ]
      },
      {
        "label": "Colors",
        "settings": [
          {
            "type": "color",
            "label": "Star color",
            "id": "starColor",

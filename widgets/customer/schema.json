              {
                "type": "select",
                "label": "Media Type",
                "id": "mediaType",
                "default": "image",
                "typeMeta": {
                  "selectOptions": [
                    { "label": "Image", "value": "image" },
                    { "label": "SVG", "value": "svg" }

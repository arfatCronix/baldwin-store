        "type": "tab",
        "label": "About Card Content",
        "sections": [
          {
            "label": "Review Details",
            "settings": [
              {
                "type": "input",
                "label": "Card title",
                "id": "memberName",
                "default": ""
              },
              {
                "type": "text",
                "label": "Card Description",
                "id": "memberBio",
                "default": ""
              },
              {
                "type": "input",
                "label": "Link Text",
                "id": "linkText",
                "default": ""
              },
              {
                "type": "input",
                "label": "Link URL",
                "id": "linkUrl",
                "default": ""
